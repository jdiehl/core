{
  "name": "@didie/core",
  "version": "1.0.11-pre",
  "description": "Server Core",
  "main": "index.js",
  "types": "index.d.js",
  "files": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jdiehl/core.git"
  },
  "scripts": {
    "test": "tslint *.ts src/**.ts test/**.ts; jest",
    "test:redis": "docker run -d -p 6379:6379 --name redis redis:alpine",
    "test:mongo": "docker run -d -p 27017:27017 --name redis mongo",
    "watch": "jest --watch --testPathPattern",
    "build": "tsc --project tsconfig.json",
    "prepublishOnly": "npm test; npm run build",
    "bump": "npm-bump patch",
    "clean": "del index.js index.d.ts 'src/**/*.d.ts' 'src/**/*.js'"
  },
  "keywords": [],
  "author": "Jonathan Diehl",
  "license": "ISC",
  "dependencies": {
    "@didie/utils": "^1.0.15",
    "@types/graphql": "^0.12.4",
    "@types/koa": "^2.0.44",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-cache-control": "^2.0.1",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-session-minimal": "^3.0.5",
    "@types/markdown-it": "^0.0.4",
    "@types/mongodb": "^3.0.7",
    "@types/mustache": "^0.8.29",
    "@types/mz": "^0.0.32",
    "@types/node": "^9.4.7",
    "@types/nodemailer": "^4.6.0",
    "@types/redis": "^2.8.6",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "graphql": "^0.13.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-cache-control": "^2.0.0",
    "koa-graphql": "^0.7.5",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.4.0",
    "koa-session-minimal": "^3.0.4",
    "markdown-it": "^8.4.1",
    "mongo": "^0.1.0",
    "mustache": "^2.3.0",
    "mz": "^2.6.0",
    "nodemailer": "^4.6.2",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "del-cli": "^1.1.0",
    "jest": "^22.4.2",
    "npm-bump": "0.0.23",
    "ts-jest": "^22.4.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
