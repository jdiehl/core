{
  "name": "@didie/core",
  "version": "1.0.7",
  "description": "Server Core",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jdiehl/core.git"
  },
  "scripts": {
    "test": "tslint *.ts src/**.ts test/**.ts; jest",
    "test:redis": "docker run -d -p 6379:6379 --name redis redis:alpine",
    "test:mongo": "docker run -d -p 27017:27017 --name redis mongo",
    "watch": "jest --watch --testPathPattern",
    "build": "tsc --project tsconfig.json",
    "prepublishOnly": "npm test; npm run build",
    "bump": "npm-bump patch"
  },
  "keywords": [],
  "author": "Jonathan Diehl",
  "license": "ISC",
  "dependencies": {
    "@didie/utils": "^1.0.12",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-cache-control": "^2.0.0",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "koa-session-minimal": "^3.0.4",
    "markdown-it": "^8.3.2",
    "mongo": "^0.1.0",
    "mustache": "^2.3.0",
    "mz": "^2.6.0",
    "nodemailer": "^4.3.1",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "request-promise-native": "^1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^21.1.4",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-cache-control": "^2.0.0",
    "@types/koa-logger": "^2.0.2",
    "@types/koa-router": "^7.0.22",
    "@types/koa-session-minimal": "^3.0.4",
    "@types/markdown-it": "^0.0.4",
    "@types/mongodb": "^2.2.15",
    "@types/mustache": "^0.8.29",
    "@types/mz": "^0.0.32",
    "@types/node": "^8.0.47",
    "@types/nodemailer": "^3.1.5",
    "@types/redis": "^2.8.1",
    "@types/request": "^2.0.7",
    "@types/request-promise-native": "^1.0.9",
    "jest": "^21.2.1",
    "npm-bump": "0.0.23",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
